<div class="container">
<br />
<div class="card-columns">
  {{#foreach posts}}
    <div class="card">
      {{#if image}}
	<a href="{{url}}"><img class="card-img-top" src="{{image}}" alt="Card image cap"></a>
      {{/if}}
      <div class="card-block">
        <h4 class="card-title"><a href="{{url}}">{{{title}}}</a></h4>
        
        <p class="card-text">{{excerpt words=25}}â€¦</p>
        {{#if tags}}
          Tags: {{tags separator=" | "}}
        {{/if}}
        <p class="text-xs-right card-text"><small class="text-muted">{{date format='dddd DD MMM YYYY'}}</small></p>
      </div>
    </div>

  {{/foreach}}
</div>
{{#if pagination}}
{{{pagination}}}
{{/if}}

</div>
